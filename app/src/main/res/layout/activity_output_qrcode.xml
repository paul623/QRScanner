<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp">
    <TextView
        android:id="@+id/tv_output_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加密输出二维码"
        android:textSize="30sp"
        android:gravity="center" />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/et_output_user"
        android:layout_below="@id/tv_output_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入操作人"
        android:textSize="25sp"/>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/et_output_name"
        android:layout_below="@id/et_output_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入产品信息（名称/批次等）"
        android:textSize="25sp"/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_output_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_output_name"
        android:textSize="15sp"
        android:text="确认"/>

    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/iv_output"
        android:layout_below="@id/btn_output_confirm"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
</RelativeLayout>